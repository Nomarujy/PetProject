@model NewsViewModel
@{
	ViewBag.Title = "Index";
	ViewBag.Banner = true;
	ViewBag.IndexClass = "current_page_item";
}

@section Banner {
	<div id="banner">
		<p>Does this statement make you want to click the big shiny button?</p>
		<a href="#" class="button large icon solid fa-check-circle">Yes it does</a>
	</div>
}

<!-- Main Wrapper -->
<div id="main-wrapper">
	<div class="wrapper style1">
		<div class="inner">

			<!-- Feature 1 -->
			<section class="container box feature1">
				<div class="row">
					<div class="col-12">
						<header class="first major">
							<h2>This is an important heading</h2>
							<p>And share with you`re</p>
						</header>
					</div>
					<div class="col-4 col-12-medium">
						<section>
							<a asp-area="News" asp-controller="Manage" asp-action="Create"><img src="/Areas/News/images/pic01.jpg" alt="" /></a>
							<header class="second icon solid fa-user">
								<h3>No special permisions</h3>
								<p>Everyone can create article</p>
							</header>
						</section>
					</div>
					<div class="col-4 col-12-medium">
						<section>
							<a href="#" class="image featured"><img src="/Areas/News/images/pic02.jpg" alt="" /></a>
							<header class="second icon solid fa-cog">
								<h3>Design you articles</h3>
								<p>Seems like html, but not them</p>
							</header>
						</section>
					</div>
					<div class="col-4 col-12-medium">
						<section>
							<a href="#" class="image featured"><img src="/Areas/News/images/pic03.jpg" alt="" /></a>
							<header class="second icon solid fa-chart-bar">
								<h3>Analytics</h3>
								<p>You can view detail info about viewers</p>
							</header>
						</section>
					</div>
					<div class="col-12">
						<p>
							Early access
						</p>
					</div>
				</div>
			</section>

		</div>
	</div>
	<div class="wrapper style2">
		<div class="inner">

			<!-- Feature 2 -->
			<section class="container box feature2">
				<div class="row">
					<div class="col-6 col-12-medium">
						<section>
							<header class="major">
								<h2>And this is a subheading</h2>
								<p>It’s important but clearly not *that* important</p>
							</header>
							<p>
								Phasellus quam turpis, feugiat sit amet ornare in, hendrerit in lectus.
								Praesent semper mod quis eget mi. Etiam eu ante risus. Aliquam erat volutpat.
								Aliquam luctus et mattis lectus sit amet pulvinar. Nam turpis nisi
								consequat etiam.
							</p>
							<footer>
								<a href="#" class="button medium icon solid fa-arrow-circle-right">Let's do this</a>
							</footer>
						</section>
					</div>
					<div class="col-6 col-12-medium">
						<section>
							<header class="major">
								<h2>This is also a subheading</h2>
								<p>And is as unimportant as the other one</p>
							</header>
							<p>
								Phasellus quam turpis, feugiat sit amet ornare in, hendrerit in lectus.
								Praesent semper mod quis eget mi. Etiam eu ante risus. Aliquam erat volutpat.
								Aliquam luctus et mattis lectus sit amet pulvinar. Nam turpis nisi
								consequat etiam.
							</p>
							<footer>
								<a href="#" class="button medium alt icon solid fa-info-circle">Wait, what?</a>
							</footer>
						</section>
					</div>
				</div>
			</section>

		</div>
	</div>
	<div class="wrapper style3">
		<div class="inner">
			<div class="container">
				<div class="row">
					<div class="col-8 col-12-medium">

						<!-- Article list -->
						<section class="box article-list">
							<h2 class="icon fa-file-alt">Recent Posts</h2>

							@foreach (var item in Model.ArticleList)
							{
								<article class="box excerpt">
									<a class="image left" asp-action="Read" asp-controller="Home" asp-route-Id="@item.Id"><img src="/Areas/News/images/pic04.jpg" alt="" /></a>
									<div>
										<header>
											<span class="date">@item.DateOfPublishing</span>
											<h3><a asp-action="Article" asp-controller="Home" asp-route-Id="@item.Id">@item.Title</a></h3>
										</header>
										<p>
											@item.Description
										</p>
									</div>
								</article>

							}
						</section>
					</div>
					<div class="col-4 col-12-medium">

						<!-- Spotlight -->
						<section class="box spotlight">
							<h2 class="icon fa-file-alt">Spotlight</h2>
							<article>
								<a class="image featured" asp-action="Read" asp-controller="Home" asp-route-Id="@Model.Spotlight.Id"><img src="/Areas/News/images/pic07.jpg" alt=""></a>
								<header>
									<h3><a asp-action="Read" asp-controller="Home" asp-route-Id="@Model.Spotlight.Id">@Model.Spotlight.Title</a></h3>
									<p>Author: @Model.Spotlight.AuthorUserName</p>
								</header>
								<p>
									@Model.Spotlight.Description
								</p>
								<footer>
									<a class="button alt icon solid fa-file-alt" asp-action="Read" asp-controller="Home" asp-route-Id="@Model.Spotlight.Id">Continue Reading</a>
								</footer>
							</article>
						</section>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>